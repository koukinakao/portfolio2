<div class= "margin-book">
  <div class= "book-details border-css-book book-page-title">
    <h1>本棚</h1>
    <% if !current_user.nil? && @user.id == current_user.id %>
      <div class= "button"><%= link_to '新規作成', new_book_path %></div><br>
    <% end %>
  </div>
  <% @books.each do |book| %>
    <div class= "book-details border-css-book">
      <div class="book-image">
        <%= image_tag book.picture.url unless book.picture.blank? %>
      </div>
      <div class="book-description">
        <h1><%= link_to book.title, volume_path(book), class: "button-t-c" %></h1>
        <% if !current_user.nil? && @books.first.user_id == current_user.id %>
          <div>
            <div class= "button"><%= link_to '編集', edit_book_path(book) %></div>
            <div class= "button"><%= link_to '削除', book, method: :delete, data: { confirm: "削除してもいいですか？" } %></div>
          </div>
        <% end %>
        <p>作成日: <%= book.created_at %></p>
        <p>内容: <%= book.content %></p>
      </div>
    </div>
  <% end %>
</div>
