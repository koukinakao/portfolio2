<div class= "book-details" id= "picture_<%= picture.position %>">
  <div class= "col-md-11">
  <div class="book-image">
    <%= image_tag picture.picture.url %>
  </div>
  <div class="book-description">
    <%= picture.position %>
  </div>
</div>
<div class= "col-md-1">
  <%= link_to '▲', change_position_volume_path(id: picture, move: 'up'), remote: true unless picture.first? %>
  <%= link_to '▼', change_position_volume_path(id: picture, move: 'down'), remote: true unless picture.last? %>
</div>